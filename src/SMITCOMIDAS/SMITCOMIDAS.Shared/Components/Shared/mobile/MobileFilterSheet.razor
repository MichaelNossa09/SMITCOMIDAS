<div class="MobileFilterSheet">
    <button class="MobileFilterSheet_trigger" @onclick="ToggleFilters">
        <span>🔍</span> Filtros
        @if (HasActiveFilters)
        {
            <span class="MobileFilterSheet_badge">@ActiveFiltersCount</span>
        }
    </button>

    @if (isOpen)
    {
        <div class="MobileFilterSheet_overlay" @onclick="CloseFilters"></div>
        <div class="MobileFilterSheet_content">
            <div class="MobileFilterSheet_header">
                <h3>Filtros</h3>
                <button class="MobileFilterSheet_closeButton" @onclick="CloseFilters">×</button>
            </div>

            <div class="MobileFilterSheet_body">
                @ChildContent
            </div>

            <div class="MobileFilterSheet_footer">
                <button class="MobileFilterSheet_clearButton" @onclick="OnClear">
                    Limpiar
                </button>
                <button class="MobileFilterSheet_applyButton" @onclick="ApplyFilters">
                    Aplicar Filtros
                </button>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public EventCallback OnApply { get; set; }
    [Parameter] public EventCallback OnClear { get; set; }
    [Parameter] public bool HasActiveFilters { get; set; }
    [Parameter] public int ActiveFiltersCount { get; set; }

    private bool isOpen = false;

    private void ToggleFilters()
    {
        isOpen = !isOpen;
    }

    private void CloseFilters()
    {
        isOpen = false;
    }

    private async Task ApplyFilters()
    {
        await OnApply.InvokeAsync();
        CloseFilters();
    }
}

<style>
    .MobileFilterSheet_trigger {
        width: 100%;
        padding: 12px 16px;
        background: white;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        font-size: 14px;
        font-weight: 600;
        color: #475569;
        cursor: pointer;
        position: relative;
        transition: all 0.2s;
        margin-bottom: 12px;
    }

    .MobileFilterSheet_trigger:active {
        background-color: #f8fafc;
        transform: scale(0.98);
    }

    .MobileFilterSheet_badge {
        position: absolute;
        top: -6px;
        right: -6px;
        background-color: rgb(81, 161, 33);
        color: white;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 11px;
        font-weight: 700;
    }

    .MobileFilterSheet_overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 999;
        animation: MobileFilterSheet_fadeIn 0.2s ease-out;
    }

    @@keyframes MobileFilterSheet_fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    .MobileFilterSheet_content {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background: white;
        border-radius: 16px 16px 0 0;
        max-height: 80vh;
        display: flex;
        flex-direction: column;
        z-index: 1000;
        animation: MobileFilterSheet_slideUp 0.3s ease-out;
    }

    @@keyframes MobileFilterSheet_slideUp {
        from

    {
        transform: translateY(100%);
    }

    to {
        transform: translateY(0);
    }

    }

    .MobileFilterSheet_header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 18px;
        border-bottom: 1px solid #e2e8f0;
    }

    .MobileFilterSheet_header h3 {
        margin: 0;
        font-size: 18px;
        font-weight: 600;
        color: #1e293b;
    }

    .MobileFilterSheet_closeButton {
        background: none;
        border: none;
        font-size: 28px;
        color: #94a3b8;
        cursor: pointer;
        padding: 0;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .MobileFilterSheet_body {
        flex: 1;
        overflow-y: auto;
        padding: 18px;
    }

    .MobileFilterSheet_footer {
        display: flex;
        gap: 10px;
        padding: 12px 18px;
        border-top: 1px solid #e2e8f0;
    }

    .MobileFilterSheet_clearButton,
    .MobileFilterSheet_applyButton {
        flex: 1;
        padding: 12px;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

    .MobileFilterSheet_clearButton {
        background-color: #f1f5f9;
        color: #475569;
    }

    .MobileFilterSheet_clearButton:active {
        background-color: #e2e8f0;
    }

    .MobileFilterSheet_applyButton {
        background-color: rgb(81, 161, 33);
        color: white;
    }

    .MobileFilterSheet_applyButton:active {
        background-color: rgb(65, 130, 25);
    }
</style>