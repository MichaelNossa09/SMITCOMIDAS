<div class="UnauthorizedState">
    <div class="UnauthorizedState_icon">🔒</div>
    <h2>Acceso Denegado</h2>
    <p>No tienes permisos suficientes para acceder a esta página.</p>
    <button class="UnauthorizedState_button" @onclick="OnGoBack">Volver al Inicio</button>
</div>

@code {
    [Parameter]
    public EventCallback OnGoBack { get; set; }
}
<style>
    .UnauthorizedState {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 400px;
        padding: 40px 20px;
        text-align: center;
    }

    .UnauthorizedState_icon {
        font-size: 80px;
        margin-bottom: 24px;
        animation: UnauthorizedState_pulse 2s ease-in-out infinite;
    }

    @@keyframes UnauthorizedState_pulse {
        0%, 100%
        {
            transform: scale(1);
            opacity: 1;
        }
        50% {
            transform: scale(1.05);
            opacity: 0.8;
        }

    }

    .UnauthorizedState h2 {
        font-size: 28px;
        font-weight: 600;
        color: #1e293b;
        margin: 0 0 12px 0;
    }

    .UnauthorizedState p {
        font-size: 16px;
        color: #64748b;
        margin: 0 0 32px 0;
        max-width: 400px;
        line-height: 1.5;
    }

    .UnauthorizedState_button {
        padding: 12px 28px;
        background-color: rgb(81, 161, 33);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

    .UnauthorizedState_button:hover {
        background-color: rgb(65, 130, 25);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(81, 161, 33, 0.3);
    }

    /* Responsive para móvil */
    @@media (max-width: 640px) {
        .UnauthorizedState
        {
            min-height: 300px;
            padding: 30px 15px;
        }

        .UnauthorizedState_icon {
            font-size: 60px;
            margin-bottom: 20px;
        }

        .UnauthorizedState h2 {
            font-size: 22px;
            margin-bottom: 10px;
        }

        .UnauthorizedState p {
            font-size: 14px;
            margin-bottom: 24px;
        }

        .UnauthorizedState_button {
            width: 100%;
            max-width: 280px;
            padding: 12px 20px;
        }

    }
</style>