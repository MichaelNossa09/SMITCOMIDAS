<div class="LoadingState">
    <div class="LoadingState_loader"></div>
    <p>@Message</p>
</div>

@code {
    [Parameter]
    public string Message { get; set; } = "Cargando...";
}
<style>
    .LoadingState {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 300px;
        padding: 40px 20px;
    }

    .LoadingState_loader {
        width: 48px;
        height: 48px;
        border: 4px solid #f1f5f9;
        border-top-color: rgb(81, 161, 33);
        border-radius: 50%;
        animation: LoadingState_spin 0.8s linear infinite;
        margin-bottom: 16px;
    }

    @@keyframes LoadingState_spin {
        to

        {
            transform: rotate(360deg);
        }

    }

    .LoadingState p {
        font-size: 15px;
        color: #64748b;
        margin: 0;
        font-weight: 500;
        text-align: center;
    }

    /* Variante con puntos animados */
    .LoadingState p::after {
        content: '';
        animation: LoadingState_dots 1.5s steps(4, end) infinite;
    }

    @@keyframes LoadingState_dots {
        0%, 20%

        {
            content: '';
        }

        40% {
            content: '.';
        }

        60% {
            content: '..';
        }

        80%, 100% {
            content: '...';
        }

    }

    /* Responsive para móvil */
    @@media (max-width: 640px) {
        .LoadingState

    {
        min-height: 200px;
        padding: 30px 15px;
    }

    .LoadingState_loader {
        width: 40px;
        height: 40px;
        border-width: 3px;
        margin-bottom: 14px;
    }

    .LoadingState p {
        font-size: 14px;
    }

    }
</style>