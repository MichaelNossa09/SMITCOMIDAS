<div class="ActionButtons">
    @if (OnView.HasDelegate)
    {
        <button class="ActionButtons_button ActionButtons_view"
                @onclick="OnView"
                title="@ViewTitle">
            <span>@ViewIcon</span>
        </button>
    }

    @if (OnEdit.HasDelegate)
    {
        <button class="ActionButtons_button ActionButtons_edit"
                @onclick="OnEdit"
                title="@EditTitle">
            <span>@EditIcon</span>
        </button>
    }

    @if (OnDelete.HasDelegate)
    {
        <button class="ActionButtons_button ActionButtons_delete"
                @onclick="OnDelete"
                title="@DeleteTitle">
            <span>@DeleteIcon</span>
        </button>
    }

    @if (OnCancel.HasDelegate)
    {
        <button class="ActionButtons_button ActionButtons_cancel"
                @onclick="OnCancel"
                title="@CancelTitle">
            <span>@CancelIcon</span>
        </button>
    }

    @if (OnChangeStatus.HasDelegate)
    {
        <button class="ActionButtons_button ActionButtons_status"
                @onclick="OnChangeStatus"
                title="@ChangeStatusTitle">
            <span>@ChangeStatusIcon</span>
        </button>
    }

    @if (CustomActions != null)
    {
        @CustomActions
    }
</div>

@code {
    // View Action
    [Parameter] public EventCallback OnView { get; set; }
    [Parameter] public string ViewTitle { get; set; } = "Ver";
    [Parameter] public string ViewIcon { get; set; } = "👁️";

    // Edit Action
    [Parameter] public EventCallback OnEdit { get; set; }
    [Parameter] public string EditTitle { get; set; } = "Editar";
    [Parameter] public string EditIcon { get; set; } = "✏️";

    // Delete Action
    [Parameter] public EventCallback OnDelete { get; set; }
    [Parameter] public string DeleteTitle { get; set; } = "Eliminar";
    [Parameter] public string DeleteIcon { get; set; } = "🗑️";

    // Cancel Action
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public string CancelTitle { get; set; } = "Cancelar";
    [Parameter] public string CancelIcon { get; set; } = "🚫";

    // Change Status Action
    [Parameter] public EventCallback OnChangeStatus { get; set; }
    [Parameter] public string ChangeStatusTitle { get; set; } = "Cambiar Estado";
    [Parameter] public string ChangeStatusIcon { get; set; } = "🔄";

    // Custom Actions
    [Parameter] public RenderFragment? CustomActions { get; set; }
}

