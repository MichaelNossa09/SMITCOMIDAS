        box-shadow: 0 0 0 3px rgba(81, 161, 33, 0.1);
    }

    .ChangeStateModal_formTextarea::placeholder {
        color: #94a3b8;
    }

    .ChangeStateModal_actions {
        display: flex;
        justify-content: flex-end;
        gap: 12px;
        padding: 20px 25px;
        border-top: 1px solid #e2e8f0;
    }

    .ChangeStateModal_secondaryButton,
    .ChangeStateModal_primaryButton {
        padding: 11px 24px;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

    .ChangeStateModal_secondaryButton {
        background-color: #f1f5f9;
        color: #475569;
    }

    .ChangeStateModal_secondaryButton:hover:not(:disabled) {
        background-color: #e2e8f0;
    }

    .ChangeStateModal_secondaryButton:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .ChangeStateModal_primaryButton {
        background-color: rgb(81, 161, 33);
        color: white;
    }

    .ChangeStateModal_primaryButton:hover:not(:disabled) {
        background-color: rgb(65, 130, 25);
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(81, 161, 33, 0.3);
    }

    .ChangeStateModal_primaryButton:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    /* Responsive para móvil */
    @@media (max-width: 640px) {
        .ChangeStateModal_overlay

    {
