    }

    .ChangeStateModal_content {
        border-radius: 16px 16px 0 0;
        width: 100%;
        max-width: 100%;
        max-height: 80vh;
        overflow-y: auto;
    }

    .ChangeStateModal_header {
        padding: 15px 18px;
        position: sticky;
        top: 0;
        background: white;
        z-index: 1;
    }

    .ChangeStateModal_header h3 {
        font-size: 16px;
    }

    .ChangeStateModal_closeButton {
        font-size: 26px;
        width: 30px;
        height: 30px;
    }

    .ChangeStateModal_body {
        padding: 18px;
    }

    .ChangeStateModal_body > p {
        font-size: 14px;
        margin-bottom: 15px;
    }

    .ChangeStateModal_formGroup {
        margin-bottom: 15px;
    }

    .ChangeStateModal_formLabel {
        font-size: 13px;
    }

    .ChangeStateModal_formSelect,
    .ChangeStateModal_formTextarea {
        font-size: 14px;
        padding: 10px;
    }

    .ChangeStateModal_actions {
        padding: 12px 18px;
        position: sticky;
        bottom: 0;
        background: white;
        flex-direction: column-reverse;
        gap: 10px;
    }

    .ChangeStateModal_secondaryButton,
    .ChangeStateModal_primaryButton {
        width: 100%;
        padding: 12px;
    }

    }
 </style>