@using SMITCOMIDAS.Shared.Models
@using SMITCOMIDAS.Shared.Models.DTOs
@if (IsVisible)
{
    <div class="ChangeStateModal_overlay">
        <div class="ChangeStateModal_content">
            <div class="ChangeStateModal_header">
                <h3>Cambiar estado del pedido</h3>
                <button class="ChangeStateModal_closeButton" @onclick="OnCancel">×</button>
            </div>

            <div class="ChangeStateModal_body">
                <p>Pedido #@Pedido?.Id - Estado actual: <strong>@Pedido?.Estado</strong></p>

                <div class="ChangeStateModal_formGroup">
                    <label class="ChangeStateModal_formLabel">Nuevo estado:</label>
                    <select class="ChangeStateModal_formSelect"
                            value="@NuevoEstado"
                            @onchange="@((e) => OnEstadoChanged.InvokeAsync((EstadoPedido)Enum.Parse(typeof(EstadoPedido), e.Value.ToString())))">
                        @foreach (var estado in EstadosSiguientes)
                        {
                            <option value="@estado">@estado</option>
                        }
                    </select>
                </div>

                @if (NuevoEstado == EstadoPedido.Devuelto)
                {
                    <div class="ChangeStateModal_formGroup">
                        <label class="ChangeStateModal_formLabel">Motivo de devolución: *</label>
                        <textarea class="ChangeStateModal_formTextarea"
                                  value="@MotivoDevolucion"
                                  @oninput="@((e) => OnMotivoChanged.InvokeAsync(e.Value.ToString()))"
                                  placeholder="Describa el motivo de la devolución..."
                                  rows="4"></textarea>
                        @if (string.IsNullOrWhiteSpace(MotivoDevolucion))
                        {
                            <small style="color: #dc2626; font-size: 12px; margin-top: 4px; display: block;">
                                El motivo de devolución es obligatorio
                            </small>
                        }
                    </div>
                }
            </div>

            <div class="ChangeStateModal_actions">
                <button class="ChangeStateModal_secondaryButton"
                        @onclick="OnCancel"
                        disabled="@IsProcessing">
                    Cancelar
                </button>
                <button class="ChangeStateModal_primaryButton"
                        @onclick="OnConfirm"
                        disabled="@(IsProcessing || (NuevoEstado == EstadoPedido.Devuelto && string.IsNullOrWhiteSpace(MotivoDevolucion)))">
                    @(IsProcessing ? "Procesando..." : "Guardar Cambios")
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public Pedido? Pedido { get; set; }
    [Parameter] public EstadoPedido NuevoEstado { get; set; }
    [Parameter] public string? MotivoDevolucion { get; set; }
    [Parameter] public bool IsProcessing { get; set; }
    [Parameter] public List<EstadoPedido> EstadosSiguientes { get; set; } = new();
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback<EstadoPedido> OnEstadoChanged { get; set; }
    [Parameter] public EventCallback<string> OnMotivoChanged { get; set; }
}

 <style>
