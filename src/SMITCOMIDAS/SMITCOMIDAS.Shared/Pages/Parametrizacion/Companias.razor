@page "/companias"

@using SMITCOMIDAS.Shared.Models
@using SMITCOMIDAS.Shared.Services
@inject ICompaniasService CompaniasService
@inject IAuthService AuthService
@inject NavigationManager Navigation


@if (isChecking)
{
    <div class="loading-container">
        <p>Verificando permisos...</p>
    </div>
}
else if (!isAuthorized)
{
    <div class="unauthorized-container">
        <div class="unauthorized-icon">🔒</div>
        <h2>Acceso Denegado</h2>
        <p>No tienes permisos suficientes para acceder a esta página.</p>
        <button class="btn-back" @onclick="GoBack">Volver al Inicio</button>
    </div>
}else{
    <div class="companias-container">
        <div class="header-section">
            <h2>Gestión de Compañías</h2>
            <button class="btn-primary" @onclick="NuevaCompania">
                <span>➕</span> Nueva Compañía
            </button>
        </div>

        @if (isLoading)
        {
            <div class="loading">Cargando...</div>
        }
        else if (companias.Any())
        {
            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>NIT</th>
                            <th>Razón Social</th>
                            <th>Nombre Comercial</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var comp in companias)
                        {
                            <tr>
                                <td>@comp.NIT</td>
                                <td>@comp.RazonSocial</td>
                                <td>@comp.NombreComercial</td>
                                <td>
                                    <span class="badge @(comp.Activa ? "badge-active" : "badge-inactive")">
                                        @(comp.Activa ? "Activa" : "Inactiva")
                                    </span>
                                </td>
                                <td>
                                    <button class="btn-icon" @onclick="() => Editar(comp.Id)" title="Editar">
                                        ✏️
                                    </button>
                                    <button class="btn-icon" @onclick="() => Eliminar(comp.Id)" title="Eliminar">
                                        🗑️
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="no-data">
                <p>No hay compañías registradas</p>
                <button class="btn-primary" @onclick="NuevaCompania">
                    Crear la primera
                </button>
            </div>
        }
    </div>
}
@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="error-toast">@errorMessage</div>
}

@code {
    private List<Compania> companias = new();
    private bool isLoading = true;
    private string errorMessage = "";
    private bool initialized = false;

    private bool isChecking = true;
    private bool isAuthorized = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !initialized)
        {
            initialized = true;
            try
            {
                var role = await AuthService.GetUserRoleAsync();
                isAuthorized = role == "Admin";

                if (isAuthorized)
                {
                    await CargarCompanias();
                }
            }
            catch (Exception ex)
            {
                errorMessage = "Error al inicializar: " + ex.Message;
                isAuthorized = false;
            }finally{
                isLoading = false;
                isChecking = false;
                StateHasChanged();
            }
        }
    }

    private async Task CargarCompanias()
    {
        try
        {
            isLoading = true;
            companias = await CompaniasService.GetCompaniasAsync();
        }
        catch (Exception ex)
        {
            errorMessage = "Error al cargar: " + ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NuevaCompania()
    {
        Navigation.NavigateTo("/companias/crear");
    }

    private void Editar(int id)
    {
        Navigation.NavigateTo($"/companias/editar/{id}");
    }

    private async Task Eliminar(int id)
    {
        try
        {
            await CompaniasService.DeleteCompaniaAsync(id);
            await CargarCompanias();
        }
        catch (Exception ex)
        {
            errorMessage = "Error al eliminar: " + ex.Message;
        }
    }
    private void GoBack()
    {
        Navigation.NavigateTo("/home");
    }
}

