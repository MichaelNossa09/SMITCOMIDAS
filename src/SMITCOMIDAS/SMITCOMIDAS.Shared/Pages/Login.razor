@page "/"
@using SMITCOMIDAS.Shared.Layout
@using SMITCOMIDAS.Shared.Models
@using System.Net.Http.Json
@using SMITCOMIDAS.Shared.Services

@layout LoginLayout

@inject IAuthService AuthService
@inject HttpClient Http
@inject NavigationManager Navigation

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h1>SMITCOMIDAS</h1>
        </div>

        <div class="login-form">
            <div class="logo-form">
                <img src="_content/SMITCOMIDAS.Shared/assets/imgs/LOGOSMITCO.png" alt="SMITCO Logo" />
            </div>
            
            <EditForm Model="@loginRequest" OnValidSubmit="HandleLogin" FormName="loginForm">
                <div class="input-group">
                    <label class="input-label">Email</label>
                    <InputText @bind-Value="loginRequest.Email"
                               placeholder="usuario@smitco.com.co"
                               class="input-field" />
                </div>

                <div class="input-group">
                    <label class="input-label">Contraseña</label>
                    <InputText @bind-Value="loginRequest.Password"
                               type="password"
                               placeholder="••••••••"
                               class="input-field" />
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="error-message">
                        @errorMessage
                    </div>
                }

                <button type="submit" class="btn-login" disabled="@isLoading">
                    @(isLoading ? "Verificando..." : "Ingresar")
                </button>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private LoginRequest loginRequest = new LoginRequest();

    private string errorMessage = "";
    private bool isLoading = false;
    private bool initialized = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !initialized)
        {
            initialized = true;
            var token = await AuthService.GetTokenAsync();
            if (!string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/home");
            }
            StateHasChanged();
        }
    }

    private async Task HandleLogin()
    {
        try
        {
            isLoading = true;
            errorMessage = "";

            if (await AuthService.LoginAsync(loginRequest.Email, loginRequest.Password))
            {
                Navigation.NavigateTo("/home");
            }
            else
            {
                errorMessage = "Credenciales incorrectas";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error de conexión";
        }
        finally
        {
            isLoading = false;
        }
    }
}